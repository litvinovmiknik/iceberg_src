mixin pagination()
	.b-pagination&attributes(attributes)
		li: a._arrow.-disable(href="#")
			span._prev
		li: a._link(href="#") 1
		li: a._link(href="#") 2
		li: a._link.-current(href="#") 3
		li: a._link(href="#") 4
		li: a._link(href="#") 5
		li: a._link(href="#") 6
		li: a._link(href="#") 7
		li: a._arrow(href="#")
			span._next